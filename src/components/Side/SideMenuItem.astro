---
import { Icon } from 'astro-icon/components';

interface Props {
  href?: string;
  nameIcon?: string;
}

const { href, nameIcon } = Astro.props;
---

<li>
  <a
    {href}
    class="flex gap-4 text-zinc-400 hover:text-zinc-100 py-3.5 px-5 font-semibold transitiona-all duration-300"
  >
    <Icon name={nameIcon} class="h-6 w-6" />
    <slot />
  </a>
</li>
